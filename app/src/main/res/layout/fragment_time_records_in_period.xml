<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="timetracker.wiegman.nl.timetracker.TimeRecordsInPeriodFragment">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX"
        android:id="@+id/timeRecordDetailsTitle"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="@dimen/FragmentTitle"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeRecordsInPeriodListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timeRecordDetailsTitle" />

</RelativeLayout>
