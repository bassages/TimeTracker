<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.wiegman.timetracker.TimeRecordsInPeriodFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_hardware_keyboard_arrow_right_black"
        android:layout_above="@+id/timeRecordsInPeriodListView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX"
        android:id="@+id/timeRecordDetailsTitle"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="@dimen/FragmentTitle"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previousImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_hardware_keyboard_arrow_left_black"
        android:layout_above="@+id/timeRecordsInPeriodListView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeRecordsInPeriodListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timeRecordDetailsTitle" />

</RelativeLayout>
